                                            <td class="price"><span>$69.00</span></td>
                                            <td class="qty">
                                                <input class="form-control input-sm" type="text" value="1">
                                                <a href="#"><i class="fa fa-plus"></i></a> <a href="#"><i class="fa fa-minus"></i></a>
                                            </td>
                                            <td class="price"><span>$69.00</span></td>
                                            <td class="action"><a href="#">Delete item</a></td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="2" rowspan="2"></td>
                                            <td colspan="3">Total products (tax incl.)</td>
                                            <td colspan="2">$355.00</td>
                                        </tr>
