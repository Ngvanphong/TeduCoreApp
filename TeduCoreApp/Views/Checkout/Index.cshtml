
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- main-container -->
<div class="main-container col1-layout">
    <div class="main container">
        <div class="row">
            <section class="col-sm-12 col-xs-12">
                <div class="col-main">
                    <div class="page-title">
                        <h1>Thanh toán</h1>
                    </div>
                    <div class="page-content checkout-page">
                        <h3 class="checkout-sep">1.Thanh toán như khách hay đăng nhập</h3>
                        <div class="box-border">
                            <div class="row">
                                <div class="col-sm-6">
                                                                       
                                    <ul>
                                        <li>
                                            <label>
                                                <input type="radio" checked name="radio1">
                                                Không sử dụng thông tin đăng nhập
                                            </label>
                                        </li>
                                        <li>
                                            <label>
                                                <input type="radio" name="radio1">
                                                Sử dụng thông tin đăng nhập
                                            </label>
                                        </li>
                                    </ul>
                                    <br>                                                                     
                                </div>
                                <div class="col-sm-6">                                                         
                                    <label>Tài khoản</label>
                                    <input class="form-control input">
                                    <label>Mật khẩu</label>
                                    <input  type="password" class="form-control input">                                   
                                    <button class="button">Đăng nhập</button>
                                </div>
                            </div>
                        </div>
                        <h3 class="checkout-sep">2.Thông tin khách hàng</h3>
                        <div class="box-border">
                            <ul>
                                <li class="row">
                                    <div class="col-sm-6">
                                        <label  class="required">Tên</label>
                                        <input type="text" class="input form-control" name="" id="name">
                                    </div>
                                    <!--/ [col] -->
                                    <div class="col-sm-6">
                                        <label  class="required">Địa chỉ nhận hàng</label>
                                        <input type="text" name="" class="input form-control" id="adress">
                                    </div>
                                    <!--/ [col] -->
                                </li>
                                <!--/ .row -->
                                <li class="row">
                                    <div class="col-sm-6">
                                        <label>Số điện thoại</label>
                                        <input type="text" name="" class="input form-control" id="mobile">
                                    </div>
                                    <!--/ [col] -->
                                    <div class="col-sm-6">
                                        <label  class="required">Email</label>
                                        <input type="text" class="input form-control" name="" id="email">
                                    </div>
                                    <!--/ [col] -->
                                    <!--/ [col] -->
                                    <div class="col-sm-12">
                                        <label  class="required">Ghi chú</label>
                                        <textarea rows="3" class="input form-control" name="" id="note"></textarea>                                      
                                    </div>
                                    <!--/ [col] -->
                                </li>                             
                                               
                            </ul>
                        </div>
                     
                        <h3 class="checkout-sep">3.Phí vận chuyển</h3>
                        <div class="box-border">
                            <ul class="shipping_method">
                                <li>                                 
                                    <div class="col-sm-2">
                                        <label class="required">Country</label>
                                        <select class="input form-control" name="">
                                            <option value="USA">USA</option>
                                            <option value="Australia">Australia</option>
                                            <option value="Austria">Austria</option>
                                            <option value="Argentina">Argentina</option>
                                            <option value="Canada">Canada</option>
                                        </select>
                                    </div>
                                </li>
                                <li>
                                   
                                    <div class="col-sm-2">
                                        <label class="required">Country</label>
                                        <select class="input form-control" name="">
                                            <option value="USA">USA</option>
                                            <option value="Australia">Australia</option>
                                            <option value="Austria">Austria</option>
                                            <option value="Argentina">Argentina</option>
                                            <option value="Canada">Canada</option>
                                        </select>
                                    </div>
                                </li>
                                <li>
                                    <label class="required">Phí vận chuyển</label><br />
                                    <label> 20,000VND</label>
                                </li>
                            </ul>
                            
                        </div>
                        <h3 class="checkout-sep">4.Phương pháp thanh toán</h3>
                        <div class="box-border">
                            <ul>
                                <li>
                                    <label for="radio_button_5">
                                        <input type="radio" checked name="radio_4" id="radio_button_5">
                                        Check / Money order
                                    </label>
                                </li>
                                <li>
                                    <label for="radio_button_6">
                                        <input type="radio" name="radio_4" id="radio_button_6">
                                        Credit card (saved)
                                    </label>
                                </li>
                            </ul>                         
                        </div>
