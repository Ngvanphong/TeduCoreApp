<!-- Latest Blog -->
<div class="container">
    <div class="row">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="blog-outer-container">
                <div class="jtv-title" style="text-align:center">
                    <h2>Bài viết mới</h2>
                </div>
                <div class="blog-inner">
                    @foreach (var blog in Model.ListBlog)
                    {
                        var urlBlog = "/" + blog.SeoAlias + ".b-" + blog.Id + ".html";
                        <div class="col-md-4 col-sm-4">
                            <div class="entry-thumb"> <a href="@urlBlog"> <img class="img-responsive" alt="@blog.Name" src="@Model.DomainApi@blog.Image"> </a> </div>
                            <div class="blog-preview_info">
                                <h3><a href="@urlBlog">@blog.Name</a></h3>
                                <ul class="post-meta">
                                    @if (blog.ViewCount > 0)
                                    {
                                        <li><i class="fa fa-comments"></i><a href="#">@blog.ViewCount</a> </li>
                                    }
                                    <li><i class="fa fa-calendar"></i>@blog.DateCreated</li>
                                </ul>
                                <div class="blog-preview_desc">@blog.Description</div>
                                <a class="blog-preview_btn" href="@urlBlog">Xem thêm  <i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>

