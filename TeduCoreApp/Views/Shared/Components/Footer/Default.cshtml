@model FooterViewModel
<!-- Brand Logo -->
<div class="brand-logo">
    <div class="container">
        <div class="slider-items-products">
            <div id="brand-logo-slider" class="product-flexslider hidden-buttons">
                <div class="slider-items slider-width-col6">
                    <!-- Item -->
                    @foreach (var pantner in Model.Pantners)
                    {
                        <div class="item"> <a href="@pantner.Url"><img class="img-responsive" src="@Model.DomainApi@pantner.Image" alt="@pantner.Name"> </a> </div>
                    }
                    <!-- End Item -->

                </div>
            </div>
        </div>
    </div>
</div>
<footer>
    <div class="footer-top">
        <div class="container">
            <div class="row">
                <div style="text-align:center"> <a href="/index.html"><img class="img-responsive" src="/client-side/images/footer-logo.png" alt="logo"> </a> </div>
                <address>
                    <p> <i class="pe-7s-map-marker"></i>@Model.Contacts.Address</p>
                    <p><i class="pe-7s-call"></i><span>@Model.Contacts.Phone</span> </p>
                    <p> <i class="pe-7s-mail-open"></i><span><a href="#">@Model.Contacts.Email</a></span></p>
                </address>
            </div>
        </div>
    </div>
    <div class="footer-inner">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-xs-12 col-md-3">
                    <div class="footer-links">
                        <h4>Danh mục chính</h4>
                        <ul class="links">
                            @foreach (var item in Model.ProductCategorys)
                            {
                                var urlCategory = "/" + item.SeoAlias + ".pc-" + item.Id + ".html";
                                <li><a href="@urlCategory" title="@item.Name">@item.Name</a></li>
                            }

                        </ul>
                    </div>
                </div>
                <div class="col-sm-4 col-xs-12 col-md-3">
                    <div class="footer-links">
                        <h4>Dịch vụ</h4>
                        <ul class="links">
                            <li><a href="/account_page.html">Tài khoản</a></li>
                            <li><a href="/wishlist.html">Yêu thích</a></li>
                            <li><a href="/checkout.html">Thanh toán</a></li>
                            <li><a href="/promotionprice.html">Khuyến mãi</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-4 col-xs-12 col-md-2">
                    <div class="footer-links">
                        <h4>Thông tin</h4>
                        <ul class="links">
                            <li><a href="/contact.html">Liên hệ</a></li>
                            <li><a href="/blog.html">Blog</a></li>
                            <li><a href="/page.html?alias=about">Giới thiệu</a></li>
                            <li><a href="/page.html?alias=policy">Chính sách</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4">
                    <div class="footer-links">
                        <div class="footer-newsletter">
                            <h4>Đăng ký nhận tin khuyến mãi</h4>
                            <form id="newsletter-validate-detail" method="post" action="">
                                <div class="newsletter-inner">
                                    <p>Quý khách đăng ký để nhập tin khuyến mãi mới nhất từ shop</p>
                                    <input class="newsletter-email" id="emailSucbrile" name='Email' placeholder='Nhập email của bạn' />
                                    <button class="button subscribe" id="btnSubcribleEmail" title="Subscribe">Đăng ký</button>
                                </div>
                            </form>
                        </div>
                        <div class="social">
                            <h4>Theo dõi shop</h4>
                            <ul class="inline-mode">
                                <li class="social-network fb"><a title="Connect us on Facebook" target="_blank" href="https://www.facebook.com"><i class="fa fa-facebook"></i></a></li>
                                <li class="social-network googleplus"><a title="Connect us on Google+" target="_blank" href="https://plus.google.com"><i class="fa fa-google-plus"></i></a></li>
                                <li class="social-network tw"><a title="Connect us on Twitter" target="_blank" href="https://twitter.com/"><i class="icon-social-twitter icons"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-sm-7 col-md-6 col-xs-12 coppyright">Copyright © 2019. All Rights Reserved. </div>
            </div>
        </div>
    </div>

</footer>
