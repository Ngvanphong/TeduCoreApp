<header>
    <div class="header-container">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <!-- Header Language -->
                    <div class="col-xs-12 col-sm-4 col-md-6">
                        <div class="welcome-msg">Xin kính chào quý khách! </div>
                    </div>
                    <div class="col-xs-6 col-sm-8 col-md-6 hidden-xs">
                        <!-- Header Top Links -->
                        <div class="jtv-top-links">
                            <div class="links">
                                <ul>
                                    @if (User.Identity.IsAuthenticated)
                                    {

                                        <li> <a title="Thông tin tài khoản" href="/account_page.html"><span class="hidden-xs">Xin chào: @User.Identity.Name</span></a> </li>
                                        <li> <a title="Đăng xuất" id="logoutPost" href="#">Đăng xuất</a> </li>

                                    }
                                    <li> <a title="Yêu thích" href="/wishlist.html">Yêu thích</a> </li>
                                    <li> <a title="Thanh toán" href="/checkout.html"><span class="hidden-xs">Thanh toán</span></a> </li>
                                    <li>
                                        <div class="dropdown block-company-wrapper hidden-xs">
                                            <a role="button" data-toggle="dropdown" data-target="#" class="block-company dropdown-toggle" href="#"> More <span class="caret"></span></a>
                                            <ul class="dropdown-menu">
                                                <li><a href="/page.html?alias=about"> Giới thiệu</a> </li>
                                                <li><a href="/contact.html">Liên hệ</a> </li>
                                                <li><a href="/page.html?alias=policy">Chính sách</a> </li>
                                                @if (!User.Identity.IsAuthenticated)
                                                {
                                                    <li><a href="/account/register.html">Đăng ký</a> </li>
                                                    <li><a href="/account/forget.html">Quên mật khẩu</a> </li>
                                                }
                                            </ul>
                                        </div>
                                    </li>
                                    @if (!User.Identity.IsAuthenticated)
                                    {
                                        <li> <a class="aSendLoginGet" href="#"><span class="hidden-xs">Đăng nhập</span></a> </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <!-- End Header Top Links -->
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <div class="jtv-top-cart-box">
                        <!-- Top Cart -->
                        <div class="mini-cart">
                            <div data-toggle="dropdown" data-hover="dropdown" class="basket dropdown-toggle"> <a href="shopping_cart.html"> <i class="pe-7s-cart"></i><span class="cart_count"></span><span class="price">Giỏ hàng</span> </a> </div>
                            <div>
                                <div class="jtv-top-cart-content">

                                    <!--block-subtitle-->
                                    <ul class="mini-products-list" id="cart-sidebar"></ul>

                                    <!--actions-->
                                    <div class="actions">
                                        <a href="/checkout.html" class="view-cart"><span>Thanh toán</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-4 col-sm-4 col-xs-12 jtv-logo-box">
                    <!-- Header Logo -->
                    <div class="logo"> <a title="eCommerce" href="/index.html"><img class="img-responsive" alt="eCommerce" src="/client-side/images/logo.png"> </a> </div>
                    <!-- End Header Logo -->
                </div>
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12 hidden-xs">
                    <div class="search-box">
                        <form method="get" action="/product/search.html" id="search_mini_form" name="Categories">
                            <input type="text" placeholder="Tìm kiếm sản phẩm..." value="" maxlength="70" name="searchProduct" id="search">
                            <button type="button" typeof="submit" id="btnSearchProduct" class="search-btn-bg"><i class="pe-7s-search"></i>&nbsp;</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<script id="productShopping-template" type="x-tmpl-mustache">
    <li class="item">
        <div class="item-inner">
            <a class="product-image" title="{{Name}}" href="/{{SeoAlias}}.p-{{Id}}.html"><img class="img-responsive" alt="{{Name}}" src="{{DomainApi}}{{ThumbnailImage}}"> </a>
            <div class="product-details">
                <div class="access"><a class="jtv-btn-remove removeForIcon" title="Xóa" href="#" data-sizeid="{{SizeId}}" data-colorid="{{ColorId}}" data-productid="{{ProductId}}">Remove</a> </div>
                <p class="product-name"><a href="/{{SeoAlias}}.p-{{Id}}.html">{{Name}}</a> </p>
                <strong>Màu: {{Color}}, {{#HideSize}}Size: {{Size}},{{/HideSize}} SL: {{Quantity}} </strong>
            </div>
        </div>
    </li>
</script>